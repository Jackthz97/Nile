<!DOCTYPE html>
<html lang="en">


<head>
  <script src="https://kit.fontawesome.com/da166663b7.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />


  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />


  <script src="https://kit.fontawesome.com/b8cfad3f17.js" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>





  <script src="https://kit.fontawesome.com/b8cfad3f17.js" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">


  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>


  <title>Home Page</title>
</head>

<body>
  <%- include('partials/_header') %>

  <%- include('partials/_pricefilter') %>

<!-- <listings> -->

  <div class="listings">
    <div class="titleContainer">
      <span id="listTitle">Spring is here</span>
      <h1 class="pageTitle">Shop Plants & Flowers</h1>
    </div>
    <div class ="product">
    <% for (let item of items) { %>
      <article>
        <div class="avaItems">
        <%if(!item.sold) {%>
          <div class="singleItem">

            <span><%=(item.title)%></span>

            <a href="/items/<%=item.id%>">
            <img class="thumbnail" alt="" src="<%= (item.thumbnail_photo_url)%>">
            </a>


            <p>$<%=(item.cost)%></p>
          </div>


        <%}%>
        </div>
        <div class="soldItems">
        <%if(item.sold) {%>
          <div class="singleItem">
            <span><%=(item.title)%></span>
            <a href="/items/<%=item.id%>">
            <img class="thumbnail" alt="" src="<%= (item.thumbnail_photo_url)%>">
            </a>
            <p>SOLD</p>
          </div>

        <% } %>
        </div>

      </article>
    <% } %>
    </div>
  </div>
  <%- include('partials/_footer') %>
</body>


</html>
