<!DOCTYPE html>
<html lang="en">

<head>
  <script src="https://kit.fontawesome.com/da166663b7.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <!-- <link footer stylesheet-carmen> -->
  <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
  <script src="https://kit.fontawesome.com/b8cfad3f17.js" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/filter.css" type="text/css" />





  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>


  <title>Home Page</title>
</head>

<body>
  <%- include('partials/_header') %>
  <%- include('partials/_pricefilter') %>


<!-- <listings> -->
  <h1 class="indexPageTitle">Listings</h1>
  <div class="listings">
    <% for (let item of items) { %>
      <article>
        <div class="avaItems">
        <%if(!item.sold) {%>
          <div>

            <span><%=(item.title)%></span>
            <a href="/items/<%=item.id%>">
            <img class="thumbnail_photo" alt="" src="<%= (item.thumbnail_photo_url)%>">
            </a>
          </div>
          <p>$<%=(item.cost)%></p>

        <%}%>
        </div>
        <div class="soldItems">
        <%if(item.sold) {%>
          <div>
            <a href="/items/<%=item.id%>"></a>
            <span><%=(item.title)%></span>
            <img class="thumbnail_photo" alt="" src="<%= (item.thumbnail_photo_url)%>">

          </div>
          <p>SOLD</p>
        <% } %>
        </div>
      </article>
    <% } %>
  </div>
  <%- include('partials/_footer') %>
</body>


</html>
